<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" monitorInterval="30">
    <Appenders>
        <!-- Consola simple para producción -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
        </Console>

        <!-- Archivo principal de aplicación -->
        <RollingFile name="AppFile" fileName="logs/app.log"
            filePattern="logs/app-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout>
                <Pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true" />
                <SizeBasedTriggeringPolicy size="100 MB" />
            </Policies>
            <DefaultRolloverStrategy max="10" compressionLevel="9" />
        </RollingFile>

        <!-- Archivo para errores (separado) -->
        <RollingFile name="ErrorFile" fileName="logs/errors.log"
            filePattern="logs/errors-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout>
                <Pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</Pattern>
            </PatternLayout>
            <ThresholdFilter level="ERROR" onMatch="ACCEPT" onMismatch="DENY" />
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true" />
                <SizeBasedTriggeringPolicy size="50 MB" />
            </Policies>
            <DefaultRolloverStrategy max="10" compressionLevel="9" />
        </RollingFile>
    </Appenders>

    <Loggers>
        <!-- Reduce el logging de librerías externas -->
        <Logger name="org.eclipse.persistence" level="WARN" additivity="false">
            <AppenderRef ref="AppFile" />
        </Logger>

        <!-- Loggers para tu aplicación -->
        <Logger name="dao" level="INFO" additivity="false">
            <AppenderRef ref="AppFile" />
            <AppenderRef ref="ErrorFile" />
        </Logger>

        <Logger name="dto" level="INFO" additivity="false">
            <AppenderRef ref="AppFile" />
            <AppenderRef ref="ErrorFile" />
        </Logger>

        <Logger name="pe.bartolito" level="INFO" additivity="false">
            <AppenderRef ref="AppFile" />
            <AppenderRef ref="ErrorFile" />
        </Logger>

        <!-- Root logger -->
        <Root level="INFO">
            <AppenderRef ref="Console" />
            <AppenderRef ref="AppFile" />
            <AppenderRef ref="ErrorFile" />
        </Root>
    </Loggers>
</Configuration>